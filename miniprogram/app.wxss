/**app.wxss**/
page {
  font-family: "FZLanTingYuan-DB1-GBK", "PingFang SC", -apple-system, "Microsoft Yahei",
    sans-serif;
  --primary-color: #9d5353;
  --text-color: #4a4a4a;
  --text-color-light: #666666;
  --text-color-lighter: #999999;
  --background-color: #f5f5f0;
  --card-color: #e9e4dc;
  --white: #ffffff;
  --amount-color: #b94d4d;
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

/* 果冻按压效果 */
.jelly-button {
  transition: all 0.1s ease-in-out;
}

.jelly-button:active {
  transform: scale(0.95);
  transition: all 0.1s ease-in-out;
}
