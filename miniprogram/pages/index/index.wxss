/* 页面容器 */
page {
  background-color: #f5f5f0;
}

.container {
  min-height: 100vh;
  background-color: #f5f5f0;
  padding: 0 32rpx;
  padding-top: calc(88rpx + env(safe-area-inset-top));
  padding-bottom: calc(160rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  position: relative;
}

/* 标题区域 */
.header {
  margin-bottom: 24rpx;
  padding-top: 24rpx;
}

.app-title {
  font-size: 38rpx;
  color: #666;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.page-title {
  font-size: 56rpx;
  font-weight: bold;
  color: #333;
  letter-spacing: 2rpx;
}

/* 分类标签栏 */
.category-bar {
  display: flex;
  gap: 32rpx;
  margin-bottom: 32rpx;
  overflow-x: auto;
  padding: 4rpx 0;
}

.category-bar::-webkit-scrollbar {
  display: none;
}

.category-item {
  height: 64rpx;
  padding: 0 44rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 32rpx;
  font-size: 32rpx;
  color: #666;
  white-space: nowrap;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease-in-out;
}

.category-item:active {
  transform: scale(0.95);
  transition: all 0.1s ease-in-out;
}

.category-item.active {
  background-color: #333;
  color: #fff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 总支出卡片 */
.total-expense {
  background-color: #9d5353;
  border-radius: 36rpx;
  padding: 48rpx;
  margin-bottom: 48rpx;
  box-shadow: 0 12rpx 24rpx rgba(157, 83, 83, 0.2);
  transition: all 0.2s ease-in-out;
}

.total-expense:active {
  transform: scale(0.98);
  transition: all 0.1s ease-in-out;
}

.expense-left {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.expense-icon {
  width: 56rpx;
  height: 56rpx;
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.expense-title {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 500;
  letter-spacing: 1rpx;
}

.expense-right {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.expense-amount {
  font-size: 64rpx;
  color: #fff;
  font-weight: bold;
  line-height: 1;
  letter-spacing: 2rpx;
}

.expense-count {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-left: 32rpx;
  padding-bottom: 12rpx;
  letter-spacing: 1rpx;
}

/* 支出记录列表 */
.expense-list {
  padding: 0 8rpx;
  margin-bottom: 120rpx;
}

.list-title {
  font-size: 34rpx;
  font-weight: normal;
  color: var(--text-color);
  margin-bottom: 32rpx;
  letter-spacing: 2rpx;
}

.expense-item {
  display: flex;
  align-items: center;
  padding: 36rpx 40rpx;
  background-color: var(--card-color);
  border-radius: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease-in-out;
}

.expense-item:active {
  transform: scale(0.98);
  transition: all 0.1s ease-in-out;
}

.expense-item:last-child {
  margin-bottom: 0;
}

.item-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  min-width: 160rpx;
}

.item-icon {
  font-size: 40rpx;
  width: 48rpx;
  text-align: center;
}

.item-tag {
  padding: 6rpx 20rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 14rpx;
  font-size: 26rpx;
  color: var(--text-color-light);
  letter-spacing: 1rpx;
}

.item-center {
  flex: 1;
  padding: 0 32rpx;
}

.item-desc {
  font-size: 32rpx;
  color: var(--text-color);
  line-height: 1.5;
  letter-spacing: 0.5rpx;
}

.item-right {
  text-align: right;
  min-width: 160rpx;
}

.item-amount {
  font-size: 44rpx;
  color: var(--amount-color);
  font-weight: normal;
  margin-bottom: 8rpx;
  letter-spacing: 1rpx;
}

.item-time {
  font-size: 30rpx;
  color: var(--text-color-light);
  font-weight: normal;
  letter-spacing: 1rpx;
}

/* 底部导航栏 */
.tab-bar {
  position: fixed;
  bottom: calc(20rpx + env(safe-area-inset-bottom));
  left: 32rpx;
  right: 32rpx;
  height: 112rpx;
  background-color: #2c2c2c;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-radius: 999rpx;
  padding: 0 56rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
  transition: all 0.2s ease-in-out;
}

.tab-item:active {
  transform: scale(0.9);
  transition: all 0.1s ease-in-out;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
  opacity: 0.85;
}

.add-btn {
  width: 112rpx;
  height: 112rpx;
  background-color: #e17c7c;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  box-shadow: 0 6rpx 12rpx rgba(225, 124, 124, 0.25);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease-in-out;
}

.add-btn:active {
  transform: translate(-50%, -50%) scale(0.9);
  transition: all 0.1s ease-in-out;
  box-shadow: 0 2rpx 8rpx rgba(225, 124, 124, 0.2);
}

.add-icon {
  width: 36rpx;
  height: 36rpx;
  position: relative;
}

.add-icon::before,
.add-icon::after {
  content: '';
  position: absolute;
  background-color: #fff;
  border-radius: 3rpx;
}

.add-icon::before {
  width: 36rpx;
  height: 2rpx;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
}

.add-icon::after {
  width: 2rpx;
  height: 36rpx;
  left: 50%;
  top: 0;
  transform: translateX(-50%);
} 